<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    app:cardBackgroundColor="#fefefd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="left|center_vertical">

            <TextView
                android:id="@+id/my_requests_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Event Name"/>

            <TextView
                android:id="@+id/my_requests_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/my_requests_name_text"
                android:text="| Badminton"/>

            <TextView
                android:id="@+id/my_requests_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="32dp"
                app:layout_constraintTop_toBottomOf="@id/my_requests_category_text"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Tue, 21 Feb 2019"/>


            <TextView
                android:id="@+id/my_requests_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="32dp"
                app:layout_constraintTop_toBottomOf="@id/my_requests_date_text"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="10:00 AM - 12:00 PM"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    style="@style/ProfileTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Status"/>

                <TextView
                    android:id="@+id/my_requests_status"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:textColor="#666"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Pending"/>

            </LinearLayout>
            

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


