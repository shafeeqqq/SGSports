<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    app:cardBackgroundColor="#fefefd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="left|center_vertical">

        <TextView
            android:id="@+id/event_item_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Event Name"/>

        <TextView
            android:id="@+id/event_item_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/event_item_name_text"
            android:text="| Badminton"/>

        <TextView
            android:id="@+id/event_item_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toBottomOf="@id/event_item_category_text"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Tue, 21 Feb 2019"/>


        <TextView
            android:id="@+id/event_item_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toBottomOf="@id/event_item_date_text"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="10:00 AM - 12:00 PM"/>


        <TextView
            android:id="@+id/event_item_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toBottomOf="@id/event_item_time_text"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Jurong Stadium"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/event_item_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="#ccc"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>

        <TextView
            android:background="@color/colorAccent"
            android:id="@+id/event_item_num_text"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:text="Looking for 2 more players"/>

    </LinearLayout>

</android.support.v7.widget.CardView>


